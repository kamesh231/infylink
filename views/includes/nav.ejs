              <a class="nav-link <%= path === '/signup' ? 'active' : '' %>" href="/signup">Signup</a>
            </li>
          <% } else { %>
            <li class="nav-item">
              <form action="/logout" method="POST">
                <input type="hidden" name="_csrf" value="<%= csrfToken %>">
                <button type="submit" class="nav-link btn btn-link">Logout</button>
              </form>
            </li>
          <% } %>
      </div>
    </nav>
